<div class="container">
    <div class="page-header">
        <h1><i class="fas fa-history"></i> Seating Arrangements History</h1>
        <a href="/generate-seating" class="btn btn-primary">
            <i class="fas fa-plus"></i> Generate New
        </a>
    </div>

    <div class="arrangements-list">
        <% if (!arrangements || arrangements.length === 0) { %>
            <div class="empty-state">
                <i class="fas fa-clipboard-list"></i>
                <h3>No arrangements found</h3>
                <p>Generate your first seating arrangement to get started.</p>
                <a href="/generate-seating" class="btn btn-primary">Generate Arrangement</a>
            </div>
        <% } else { %>
            <div class="arrangements-grid">
                <% arrangements.forEach(arrangement => { %>
                    <div class="arrangement-card">
                        <div class="arrangement-header">
                            <h3>
                                <i class="fas fa-chalkboard"></i>
                                <%= arrangement.classroom_name || ("Classroom " + arrangement.classroomId) %>
                            </h3>
                            <% if (arrangement.created_at) { %>
                                <span class="date">
                                    <%= new Date(arrangement.created_at).toLocaleDateString() %>
                                </span>
                            <% } %>
                        </div>

                        <!-- Seating grid -->
                        <div class="seating-grid">
                            <% if (arrangement.students && arrangement.students.length > 0) { %>
                                <% arrangement.students.forEach(student => { %>
                                    <div class="seat">
                                        <strong><%= student.roll_no %></strong><br>
                                        <%= student.name %><br>
                                        <span class="dept"><%= student.department %></span>
                                    </div>
                                <% }) %>
                            <% } else { %>
                                <p>No students assigned.</p>
                            <% } %>
                        </div>

                        <!-- Actions -->
                        <div class="arrangement-actions">
                            <a href="/view-arrangement/<%= arrangement.id || arrangement.classroomId %>" 
                               class="btn btn-primary btn-sm">
                                <i class="fas fa-eye"></i> View Chart
                            </a>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>
</div>
